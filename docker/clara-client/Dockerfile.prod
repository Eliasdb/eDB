# Base image for serving static files
FROM nginx:alpine

# Copy the exported web bundle from the Expo build
COPY apps/mobile/dist /usr/share/nginx/html

# Provide a simple SPA-friendly nginx config (serves index.html on refresh)
COPY docker/clara-client/nginx/default.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
