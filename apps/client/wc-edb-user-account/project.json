{
  "name": "wc-edb-user-account",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/client/wc-edb-user-account/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "pnpm vite build --mode staging --config apps/client/wc-edb-user-account/vite.config.mts"
          },
          {
            "command": "pnpm vite build --mode staging --config apps/client/wc-edb-user-account/vite.styles.config.mts"
          }
        ],
        "parallel": false
      },
      "configurations": {
        "production": {
          "commands": [
            {
              "command": "pnpm vite build --mode production --config apps/client/wc-edb-user-account/vite.config.mts"
            },
            {
              "command": "pnpm vite build --mode production --config apps/client/wc-edb-user-account/vite.styles.config.mts"
            }
          ]
        },
        "staging": {
          "commands": [
            {
              "command": "pnpm vite build --mode staging --config apps/client/wc-edb-user-account/vite.config.mts"
            },
            {
              "command": "pnpm vite build --mode staging --config apps/client/wc-edb-user-account/vite.styles.config.mts"
            }
          ]
        },
        "development": {
          "commands": [
            {
              "command": "pnpm vite build --mode development --config apps/client/wc-edb-user-account/vite.config.mts"
            },
            {
              "command": "pnpm vite build --mode development --config apps/client/wc-edb-user-account/vite.styles.config.mts"
            }
          ]
        }
      },
      "defaultConfiguration": "production"
    },

    /* ðŸ”¹ NEW: dev build in watch mode */
    "build-dev-watch": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "pnpm vite build --mode development --watch --config apps/client/wc-edb-user-account/vite.config.mts",
          "pnpm vite build --mode development --watch --config apps/client/wc-edb-user-account/vite.styles.config.mts"
        ],
        "parallel": true,
        "color": true
      }
    },

    "serve": {
      "executor": "@nx/vite:dev-server",
      "options": {
        "configFile": "apps/client/wc-edb-user-account/vite.config.mts"
      },
      "configurations": {
        "production": {
          "mode": "production"
        },
        "staging": {
          "mode": "staging"
        },
        "development": {
          "mode": "development"
        }
      },
      "defaultConfiguration": "development"
    }
  }
}
