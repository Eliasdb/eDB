{
  "name": "edb",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/client/edb/src",
  "tags": [],
  "implicitDependencies": ["wc-edb-user-account", "mobile"],
  "targets": {
    // ðŸ”¹ keep your existing webpack+MF build as-is
    "build": {
      "allowedCommonJsDependencies": [
        "flatpickr",
        "flatpickr/dist/plugins/rangePlugin"
      ],
      "executor": "@nx/angular:webpack-browser",
      "options": {
        "outputPath": "dist/apps/client/edb",
        "main": "apps/client/edb/src/main.ts",
        "index": "apps/client/edb/src/index.html",
        "polyfills": [],
        "tsConfig": "apps/client/edb/tsconfig.app.json",
        "inlineStyleLanguage": "css",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/client/edb/public"
          },
          {
            "glob": "**/*",
            "input": "apps/client/edb/src/assets",
            "output": "assets"
          },
          {
            "glob": "**/*",
            "input": "dist/apps/client/edb-user-account",
            "output": "assets/eDB-user-account"
          },
          {
            "glob": "**/*",
            "input": "apps/client/edb/src/assets/clara/_expo",
            "output": "_expo"
          }
        ],
        "scripts": [],
        "styles": [
          "apps/client/edb/src/styles.css",
          "@angular/material/prebuilt-themes/purple-green.css"
        ],
        "stylePreprocessorOptions": {
          "includePaths": [
            "./node_modules",
            "libs/shared/client/ui/src/lib/styles/"
          ]
        },
        "namedChunks": true,
        "customWebpackConfig": {
          "path": "apps/client/edb/webpack.config.ts"
        }
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "4mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "outputHashing": "all",
          "fileReplacements": [
            {
              "replace": "libs/utils/util-environment/src/lib/environments/environment.ts",
              "with": "libs/utils/util-environment/src/lib/environments/environment.prod.ts"
            },
            {
              "replace": "apps/client/edb/src/environments/environment.ts",
              "with": "apps/client/edb/src/environments/environment.prod.ts"
            }
          ],
          "customWebpackConfig": {
            "path": "apps/client/edb/webpack.prod.config.ts"
          }
        },
        "staging": {
          "optimization": false,
          "sourceMap": true,
          "fileReplacements": [
            {
              "replace": "libs/utils/util-environment/src/lib/environments/environment.ts",
              "with": "libs/utils/util-environment/src/lib/environments/environment.staging.ts"
            },
            {
              "replace": "apps/client/edb/src/environments/environment.ts",
              "with": "apps/client/edb/src/environments/environment.staging.ts"
            }
          ],
          "customWebpackConfig": {
            "path": "apps/client/edb/webpack.staging.config.ts"
          }
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true,
          "fileReplacements": [
            {
              "replace": "libs/utils/util-environment/src/lib/environments/environment.ts",
              "with": "libs/utils/util-environment/src/lib/environments/environment.ts"
            }
          ]
        }
      },
      "defaultConfiguration": "production"
    },

    // ðŸ”¹ NEW: Angular/Vite-style build just for dev
    "build-ng": {
      "executor": "@angular/build:application",
      "dependsOn": [
        {
          "target": "build",
          "projects": "dependencies"
        }
      ],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/client/edb-ng",
        "browser": "apps/client/edb/src/main.ts",
        "tsConfig": "apps/client/edb/tsconfig.app.json",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/client/edb/public"
          },
          {
            "glob": "**/*",
            "input": "apps/client/edb/src/assets",
            "output": "assets"
          },
          {
            "glob": "**/*",
            "input": "dist/apps/client/edb-user-account",
            "output": "assets/eDB-user-account"
          }
        ],
        "styles": [
          "apps/client/edb/src/styles.css",
          "@angular/material/prebuilt-themes/purple-green.css"
        ]
      },
      "configurations": {
        "production": {
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "development"
    },

    "serve-dev-with-account": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run wc-edb-user-account:build-dev-watch",
          "nx serve edb"
        ],
        "parallel": true,
        "color": true
      }
    },

    // ðŸ”¹ NEW: Fast dev server like in smostr-admin
    "serve": {
      "continuous": true,
      "executor": "@angular/build:dev-server",
      "options": {
        "proxyConfig": "apps/client/edb/proxy.conf.json"
      },
      "configurations": {
        "production": {
          "buildTarget": "edb:build-ng:production"
        },
        "development": {
          "buildTarget": "edb:build-ng:development"
        }
      },
      "defaultConfiguration": "development"
    },

    // ðŸ”¹ keep your MF dev server under a different name
    "serve-mf": {
      "allowedCommonJsDependencies": [
        "flatpickr",
        "flatpickr/dist/plugins/rangePlugin"
      ],
      "executor": "@nx/angular:module-federation-dev-server",
      "options": {
        "proxyConfig": "apps/client/edb/proxy.conf.json",
        "publicHost": "http://localhost:4200",
        "buildTarget": "edb:build:development"
      },
      "configurations": {
        "production": {
          "buildTarget": "edb:build:production"
        },
        "staging": {
          "buildTarget": "edb:build:staging"
        },
        "development": {
          "buildTarget": "edb:build:development"
        }
      },
      "defaultConfiguration": "development",
      "continuous": true
    },

    "extract-i18n": {
      "executor": "@angular/build:extract-i18n",
      "options": {
        "buildTarget": "edb:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/vite:test",
      "options": {
        "vitestConfig": "apps/client/edb/vitest.config.ts",
        "passWithNoTests": true
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "edb:build",
        "port": 4200,
        "staticFilePath": "dist/apps/client/edb/browser",
        "spa": true
      }
    }
  }
}
