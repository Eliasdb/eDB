{
  "name": "admin-api",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/server/admin-api",
  "tags": ["scope:admin", "type:api"],
  "targets": {
    "serve": {
      "command": "DOTNET_USE_POLLING_FILE_WATCHER=1 dotnet watch run",
      "options": { "cwd": "{projectRoot}" },
      "continuous": true
    },
    "build": {
      "command": "dotnet build",
      "options": {
        "cwd": "{projectRoot}"
      }
    },
    "swagger": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/libs/generated/admin-api-swagger"],
      "options": {
        "command": "echo \"skip swagger generation (nx/dotnet executors removed)\""
      }
    }
  }
}
