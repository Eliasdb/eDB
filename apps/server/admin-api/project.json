{
  "name": "admin-api",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/server/admin-api",
  "tags": ["scope:admin", "type:api"],
  "targets": {
    "serve": {
      "command": "DOTNET_USE_POLLING_FILE_WATCHER=1 dotnet watch run",
      "options": { "cwd": "{projectRoot}" },
      "continuous": true
    },
    "build": {
      "command": "dotnet build",
      "options": {
        "cwd": "{projectRoot}"
      }
    },
    "swagger": {
      "executor": "@nx-dotnet/core:update-swagger",
      "outputs": ["{workspaceRoot}/libs/generated/admin-api-swagger"],
      "options": {
        "output": "libs/generated/admin-api-swagger"
      },
      "dependsOn": ["build"]
    }
  }
}
