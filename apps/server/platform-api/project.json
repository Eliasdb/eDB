{
  "name": "platform-api",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/server/platform-api",
  "tags": ["scope:platform", "type:api"],
  "targets": {
    "serve": {
      "command": "DOTNET_USE_POLLING_FILE_WATCHER=1 dotnet watch run",
      "options": { "cwd": "{projectRoot}" },
      "continuous": true
    },
    "build": {
      "command": "dotnet build",
      "options": {
        "cwd": "{projectRoot}"
      }
    }
  }
}
