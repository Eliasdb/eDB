{
  "name": "clara-api",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/server/clara-api/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "defaultConfiguration": "production",
      "options": {
        "platform": "node",
        "outputPath": "dist/apps/server/clara-api",
        "format": ["cjs"],
        "bundle": true,
        "main": "apps/server/clara-api/src/app/main.ts",
        "tsConfig": "apps/server/clara-api/tsconfig.app.json",
        "assets": ["apps/server/clara-api/src/assets"],
        "externalDependencies": "all",
        "generatePackageJson": true,
        "esbuildOptions": { "sourcemap": true }
      },
      "configurations": {
        "development": {},
        "production": { "esbuildOptions": { "sourcemap": false } },
        "staging": { "esbuildOptions": { "sourcemap": true } }
      }
    },
    "prune-lockfile": {
      "executor": "@nx/js:prune-lockfile",
      "cache": true,
      "outputs": [
        "{workspaceRoot}/dist/apps/server/clara-api/package.json",
        "{workspaceRoot}/dist/apps/server/clara-api/pnpm-lock.yaml"
      ],
      "options": { "buildTarget": "clara-api:build" },
      "configurations": {
        "staging": { "buildTarget": "clara-api:build:staging" },
        "production": { "buildTarget": "clara-api:build:production" }
      }
    },
    "copy-workspace-modules": {
      "executor": "@nx/js:copy-workspace-modules",
      "cache": true,
      "outputs": [
        "{workspaceRoot}/dist/apps/server/clara-api/workspace_modules"
      ],
      "options": { "buildTarget": "clara-api:build" },
      "configurations": {
        "staging": { "buildTarget": "clara-api:build:staging" },
        "production": { "buildTarget": "clara-api:build:production" }
      }
    },
    "prune": {
      "dependsOn": ["prune-lockfile", "copy-workspace-modules"],
      "executor": "nx:noop"
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "clara-api:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": { "buildTarget": "clara-api:build:development" },
        "production": { "buildTarget": "clara-api:build:production" },
        "staging": { "buildTarget": "clara-api:build:staging" }
      }
    }
  }
}
