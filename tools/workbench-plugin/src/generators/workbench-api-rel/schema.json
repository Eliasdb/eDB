{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "workbenchApiRel",
  "type": "object",
  "properties": {
    "belongsTo": {
      "type": "string",
      "description": "Format: childPlural:parentPlural (e.g. 'albums:authors')",
      "pattern": "^[a-z0-9-]+:[a-z0-9-]+$"
    },
    "fk": {
      "type": "string",
      "description": "FK field name on the child model (default: <parentSingular>Id)"
    },
    "include": {
      "type": "string",
      "description": "Include alias in ?include=... (default: parent singular)"
    },
    "onDelete": {
      "type": "string",
      "enum": ["restrict", "setNull", "cascade"],
      "description": "FK onDelete behavior"
    },
    "select": {
      "type": "string",
      "description": "Comma-separated list of parent properties to expose in include (default: id,name)"
    }
  },
  "required": ["belongsTo"]
}
