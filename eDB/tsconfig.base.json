{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@e-db/generated-platform-api-types": [
        "libs/generated/platform-api-types/src/index.ts"
      ],
      "@eDB/client-admin": ["libs/client-admin/src/index.ts"],
      "@eDB/client-auth": ["libs/client-auth/src/index.ts"],
      "@eDB/client-catalog": ["libs/client-catalog/src/index.ts"],
      "@eDB/client-dashboard": ["libs/client-dashboard/src/index.ts"],
      "@eDB/client-profile": ["libs/client-profile/src/index.ts"],
      "@eDB/feature-404": ["libs/feature-404/src/index.ts"],
      "@eDB/feature-admin": ["libs/feature-admin/src/index.ts"],
      "@eDB/feature-admin-dashboard": [
        "libs/feature-admin-dashboard/src/index.ts"
      ],
      "@eDB/feature-catalog": ["libs/feature-catalog/src/index.ts"],
      "@eDB/feature-dashboard": ["libs/feature-dashboard/src/index.ts"],
      "@eDB/feature-login": ["libs/feature-login/src/index.ts"],
      "@eDB/feature-profile": ["libs/feature-profile/src/index.ts"],
      "@eDB/feature-register": ["libs/feature-register/src/index.ts"],
      "@eDB/feature-shell": ["libs/feature-shell/src/index.ts"],
      "@eDB/shared-env": ["libs/config/shared-env/src/index.ts"],
      "@eDB/shared-ui": ["libs/ui/src/index"],
      "@eDB/shared-utils": ["libs/utils/src/index"],
      "@eDB/utils-user-params": ["libs/utils-user-params/src/index.ts"]
    }
  },
  "exclude": ["tmp"]
}
