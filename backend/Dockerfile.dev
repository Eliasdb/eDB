FROM node:18-slim AS dev

# Set the working directory
WORKDIR /app

# Install pnpm globally
RUN npm install -g pnpm

# Set environment variables for global installations
ENV PNPM_HOME="/root/.pnpm"
ENV PATH="${PNPM_HOME}:${PNPM_HOME}/bin:${PATH}"

# Install necessary tools including OpenSSL
RUN apt-get update && apt-get install -y --no-install-recommends \
    netcat-openbsd openssl && \
    rm -rf /var/lib/apt/lists/*

# Copy package.json and lock file first (to leverage Docker caching)
COPY package*.json ./

# Install dependencies inside the container
RUN pnpm install

# Copy the rest of the application code
COPY . .

# Copy and set permissions for wait-for-it.sh script
COPY wait-for-it.sh /wait-for-it.sh
RUN chmod +x /wait-for-it.sh

# Expose the port your application runs on (e.g., 9100)
EXPOSE 9100

# Run migrations first, then start the application with nodemon
CMD ["/bin/sh", "-c", "/wait-for-it.sh db -- pnpm run dev:start"]
